
#include<stdio.h>

int main()
{
    //Exercício 1 - Aula 4
//Faça um algoritmo que receba um número e mostre a mensagem "Sim" caso este número seja maior que 10. Se for menor ou igual, o programa deve encerrar sem exibir mais nada.
int num;
printf("Insira um número");
scanf("%d" , &num);
if (num > 10) {
  printf("Sim\n");
}

printf("----------------------------\n");

  //Exercício 2 - Aula 4
//Solicite que o usuário digite um número. Informe então se este número é par ou ímpar.
printf("Insira um número");
scanf("%d" , &num);
if (num%2 == 0) {
  printf("O número é par\n");
}
else {
  printf ("O número é ímpar\n");
}

printf("----------------------------\n");

  //Exercício 3 - Aula 4
//Escrever um algoritmo que leia dois valores inteiro distintos e informe qual deles é o maior.

int valor1, valor2;

printf ("Digite um valor inteiro");
scanf ("%d", &valor1);
printf ("Digite um segundo valor inteiro");
scanf ("%d", &valor2);

if (valor1>valor2) {
    printf ("%d é maior que %d \n", valor1, valor2);
}
else {
     printf ("%d é maior que %d \n", valor2, valor1);
}
  printf("---------------------\n");

  //Exercício 4 - Aula 4
//Altere o exercício anterior de forma que ele informe também se os números são iguais.

printf ("Digite um valor inteiro");
scanf ("%d", &valor1);
printf ("Digite um segundo valor inteiro");
scanf ("%d", &valor2);

if (valor1==valor2) {
    printf ("Os valores digitados são iguais.\n");
}
else {
     if (valor1>valor2) {
         printf("%d é maior que %d \n", valor1, valor2);
     }
     else {
         printf("%d é maior que %d \n", valor2, valor1);
     }
}
  printf("---------------------\n");
  
  //Exercício 5 - Aula 4
//Crie um programa que recebe um número inteiro e informa se este número é múltiplo de 10.

int numero;
printf ("Digite um número inteiro");
scanf ("%d", &numero);
if (numero%10==0) {
    printf ("%d é multiplo de 10.\n", numero);
}
else {
    printf("%d não é multiplo de 10 \n", numero);
}

  printf("---------------------\n");

  //Exercício 6 - Aula 4
//Crie um programa que recebe dois números inteiros. Exiba a mensagem "sim" apenas caso ambos sejam maiores que 10.

int numint, numint2;
printf("Escreva um número inteiro:") ;
scanf("%d" , &numint);
printf("Escreva outro número inteiro:") ;
scanf("%d" , &numint2);

  
if (numint> 10 && numint2> 10) {
  printf("Sim \n");
}

  return 0;
}
